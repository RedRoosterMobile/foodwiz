<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">FoodWiz</a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if current_user %>
            <li <%= active_navigation_path(logout_path) %>>
              <%= link_to 'Ausloggen', logout_path %>
            </li>
        <% else %>
            <li <%= active_navigation_path(signup_path) %>>
              <%= link_to 'Anmelden', signup_path %>
            </li>
            <li <%= active_navigation_path(login_path) %>>
              <%= link_to 'Einloggen', login_path %>
            </li>
        <% end %>
        <li <%= active_navigation_path(posts_path) %> >
          <%= link_to t('activerecord.models.post.page_title.index'), posts_path %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Theme <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% @bootswatch_themes.each do |theme| %>
                <% if theme == @bootswatch_theme %>
                    <li class="active" >
                <% else %>
                    <li>
                <% end %>
                    <%= link_to theme,url_for(params.merge(:theme => theme)), method: :get %>
                </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
            <span>logged in as: <%= is_admin? ? 'Admin' : current_user.email %></span>
          </ul>
      <% end %>
      <!-- TODO google search
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      -->

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if controller_name=='home' %>
<div class="jumbotron">
  <h1><%=t('navigation.jumbotron.title') %></h1>
  <p><a class="btn btn-primary btn-lg" role="button"><%= t('navigation.links.welcomelink') %></a></p>
</div>
<% end %>

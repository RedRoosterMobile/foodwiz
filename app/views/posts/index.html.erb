<h1>Listing posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>
          <div class="button-group text-right" >
            <%= link_to 'Show', post, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_post_path(post),class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy', post,class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path ,class: 'btn btn-success' %>
